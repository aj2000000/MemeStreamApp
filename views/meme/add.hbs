<h1 class="text-center mb-3">{{viewTitle}}</h1>
<form action="/meme" method="POST" class="mb-4">
<input type="hidden" name='_id' value='{{meme._id}}'>
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" placeholder="name">
</div>
<div class="form-group">
    <label for="caption">caption</label>
    <input type="text" name="caption" class="form-control" placeholder="caption">
</div>
<div class="form-group">
    <label for="image">Image</label>
   <input type="text" name="image"  class="form-control" placeholder="image">
</div>
<input type="submit" value="Add Meme" class="btn btn-success">
</form>
<h4>memes</h4>
<ul class="list-group">
    {{#each list}}
    <li class="list-group-item">{{this.name}}</li>
    <li  class="list-group-item">{{this.caption}}</li>
    <li  class="list-group-item"><img src={{this.image}} height="300px" width="300px"></li>
    {{!-- <input type="submit"  action="/meme/delete/{{this._id}}" value="Delete Meme" class="btn btn-success"> --}}
    <br>
    {{/each}}
</ul>